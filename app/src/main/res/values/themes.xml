<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeezerGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify_black</item>
        <item name="colorPrimaryVariant">@color/spotify_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/spotify_dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/spotify_black</item>
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textViewStyle">@style/GothamTextViewStyle</item>

        <item name="buttonStyle">@style/GothamButtonStyle</item>

    </style>


    <style name="GothamTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="GothamButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>


    <!--    <style name="MySnackBarTVStyle" parent="Widget.MaterialComponents.Snackbar.TextView">-->
    <!--        <item name="android:background">@color/spotify_green</item>-->
    <!--    </style>-->


</resources>