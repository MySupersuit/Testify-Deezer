<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".spotifive.SpotifiveFragment">

    <data>

        <variable
            name="viewModel"
            type="com.tom.deezergame.spotifive.SpotifiveViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/autoComplete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="sup"/>

        <AutoCompleteTextView
            android:id="@+id/autoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            android:text="@={viewModel.user}"
            android:inputType="text"
            android:maxLines="1"
            android:hint="sup"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/autoComplete"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:enabled="@{viewModel.valid}"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="sub"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>